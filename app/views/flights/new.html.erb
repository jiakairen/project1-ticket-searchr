<h1 class="text-center">Add New Flight to <%= @airline.name %> (<%= @airline.code %>)</h1>

<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="card">
            <%= image_tag @airline.logo, :class => 'thumbnail card-img-top' %>
            <div class="card-body">
                <%= form_for [@airline, @flight] do |f| %>
                    <%= f.label :flight_number, :class => 'form-label' %>
                    <%= f.number_field :flight_number, :required => true, :placeholder => '123', :min => 0, :class => 'form-control' %>

                    <%= f.label :origin, :class => 'form-label' %>
                    <%= f.text_field :origin, :required => true, :placeholder => 'SYD', :class => 'form-control' %>

                    <%= f.label :destination, :class => 'form-label' %>
                    <%= f.text_field :destination, :required => true, :placeholder => 'BNE', :class => 'form-control' %>

                    <%= f.label :departure, "Departure Time", :class => 'form-label' %>
                    <%= f.datetime_field :departure, :required => true, :class => 'form-control' %>

                    <%= f.label :arrival, "Arrival Time", :class => 'form-label' %>
                    <%= f.datetime_field :arrival, :required => true, :class => 'form-control' %>

                    <%= f.submit "Add flight", :class => "search-button btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>