<h1><%= @flight.airline.code %><%= @flight.flight_number %></h1>
<p>From: <%= @flight.origin %></p>
<p>To: <%= @flight.destination %></p>
<p>Departure time: <%= @flight.departure %></p>
<p>Arrival time: <%= @flight.arrival %></p>

<% if @economy_tickets.any? %>
    <p><%= number_to_currency @economy_tickets.first.price %> - <%= link_to 'Book Economy', ticket_path(@economy_tickets.first.id) %> (<%= pluralize @economy_available, "seat" %> remaining)</p>
<% end %>

<% if @business_tickets.any? %>
    <p><%= number_to_currency @business_tickets.first.price %> - <%= link_to 'Book Business', ticket_path(@business_tickets.first.id) %> (<%= pluralize @business_available, "seat" %> remaining)</p>
<% end %>