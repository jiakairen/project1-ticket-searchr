<%= form_for [@airline, @flight, @ticket] do |f| %>
    <%= f.label :price, :class => 'form-label' %>
    <%= f.number_field :price, :required => true, :placeholder => "1099", :class => 'form-control' %>
    
    <%= label_tag :qty, "Quantity", :class => 'form-label' %>
    <%= number_field_tag :qty, nil, required: true, placeholder: "10", min: 1, :class => 'form-control' %>

    <%= f.label :class_type, "Class", :class => 'form-label' %>
    <%= f.select(:class_type, Ticket.pluck(:class_type).uniq, {}, :class => 'form-select') %>

    <%= f.submit "Add tickets", :class => "search-button btn btn-primary" %>
<% end %>